<%- url ||= nil; linkname ||= nil -%>
<section class='new-link'>
  <form action='/+/links' method='POST'>
    <p><input type='text' name='url' placeholder='https://...' value="<%= url&.sub(?", '')  %>" class='new-link-url' autocomplete=off></p>
    <p class='new-link-down'>⬇︎</p>
    <p><input type='text' name='linkname' placeholder='Choose a short name (Recommended)' value="<%= linkname&.sub(?", '') %>" class='new-link-name' autocomplete=off></p>
    <p><input type='submit' value='Shorten'></p>
  </form>
</section>

